	assume	adl=1

	public	_ispunct
_ispunct:
	pop	hl
	pop	de
	push	de
	push	hl
	or	a,a
	sbc	hl,hl
	bit	7,e
	ret	nz
	ex	de,hl
	ld	de,___maptab
	add	hl,de
	ld	a,(hl)
	and	a,2
	sbc	hl,hl
	ld	l,a
	ret

	extern	___maptab
