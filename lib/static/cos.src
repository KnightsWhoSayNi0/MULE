; double cos(double arg);
	assume	adl=1

	public	_cosf, _cos
_cos := _cosf
_cosf:
	call	__frameset0
	ld	hl,(ix+6)
	ld	e,(ix+9)
	ld	bc,0
	xor	a,a
	push	de
	push	hl
	call	__fcmp
	pop	bc
	pop	de
	ld	a,e
	jp	p,l_1
	call	__fneg

l_1:	ld	hl,1
	push	hl
	ld	l,a
	push	hl
	push	bc
	call	_sinus
	ld	sp,ix
	pop	ix
	ret

	extern	_sinus
	extern	__frameset0
	extern	__fcmp
	extern	__fneg
